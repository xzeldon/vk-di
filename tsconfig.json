{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "lib": [
            "ES2019",
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "Node",
        "types": [
            "reflect-metadata",
            "node"
        ],
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}